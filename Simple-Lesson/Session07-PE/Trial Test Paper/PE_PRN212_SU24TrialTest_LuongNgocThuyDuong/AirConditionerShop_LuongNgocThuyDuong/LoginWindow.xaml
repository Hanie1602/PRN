        <Rectangle HorizontalAlignment="Center" Height="232" Margin="0,10,0,0" Stroke="Black" VerticalAlignment="Top" Width="348" Fill="White" RadiusX="20" RadiusY="20"/>

        <Label Content="Log in" HorizontalAlignment="Center" Height="61" Margin="0,10,0,0" VerticalAlignment="Top" Width="158" Background="Transparent" Foreground="Black" FontSize="40" FontWeight="ExtraBold"/>
        <Label Content="Email:" HorizontalAlignment="Left" Height="29" Margin="150,96,0,0" VerticalAlignment="Top" Width="84" RenderTransformOrigin="0.733,0.769" Background="Transparent" Foreground="Black" FontFamily="18" FontWeight="Bold"/>
        <Label Content="Password:" HorizontalAlignment="Left" Height="27" Margin="150,130,0,0" VerticalAlignment="Top" Width="84"/>
        <Button x:Name="LoginButton" Content="Login" HorizontalAlignment="Left" Height="37" Margin="192,178,0,0" VerticalAlignment="Top" Width="81" Click="LoginButton_Click"/>

    </Grid>
</Window>
