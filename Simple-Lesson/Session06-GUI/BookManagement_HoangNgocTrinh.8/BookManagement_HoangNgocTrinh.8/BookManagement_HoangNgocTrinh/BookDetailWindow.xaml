<Window x:Class="BookManagement_HoangNgocTrinh.BookDetailWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:BookManagement_HoangNgocTrinh"
        mc:Ignorable="d"
        Title="Book Detail" Height="750" Width="1145" Background="#7FB3D5" ResizeMode="NoResize" WindowStartupLocation="CenterScreen" Loaded="Window_Loaded" >
    <Grid>
        <Label x:Name="BookModeLabel" Content="Create | Update Book" HorizontalAlignment="Left" Height="80" Margin="31,20,0,0" VerticalAlignment="Top" Width="772" FontWeight="Heavy" FontSize="50" Foreground="#FFEEDB20"/>
        <Rectangle HorizontalAlignment="Left" Height="545" Margin="38,144,0,0" Stroke="Black" VerticalAlignment="Top" Width="875" Fill="#ABEBC6"/>
        <Label Content="Book ID" HorizontalAlignment="Left" Height="45" Margin="58,172,0,0" VerticalAlignment="Top" Width="107" Foreground="#0B5345"/>
        <TextBox x:Name="BookIdTextBox" HorizontalAlignment="Left" Height="45" Margin="226,169,0,0" TextWrapping="Wrap"  VerticalAlignment="Top" Width="275" TabIndex="0" Background="#FF63E38E"/>
        <Label Content="Book Name" HorizontalAlignment="Left" Height="45" Margin="58,234,0,0" VerticalAlignment="Top" Width="107" Foreground="#0B5345"/>
        <TextBox x:Name="BookNameTextBox" HorizontalAlignment="Left" Height="45" Margin="226,229,0,0" TextWrapping="Wrap"  VerticalAlignment="Top" Width="637" TabIndex="1" Background="#FF63E38E"/>

        <Button x:Name="SaveButton" Content="Save Book" HorizontalAlignment="Left" Height="50" Margin="945,144,0,0" VerticalAlignment="Top" Width="165" TabIndex="8" Style="{StaticResource ButtonYellow}" Click="SaveButton_Click" Background="#FF63E38E" Foreground="#FFD5512D"/>
        <Button x:Name="Close" Content="Close" HorizontalAlignment="Left" Height="50" Margin="945,224,0,0" VerticalAlignment="Top" Width="165" TabIndex="9" Style="{StaticResource ButtonYellow}" Background="#FF63E38E" Foreground="#FFD5512D" />
        <Label Content="Book Desc" HorizontalAlignment="Left" Height="45" Margin="58,296,0,0" VerticalAlignment="Top" Width="107" Foreground="#0B5345"/>
        <TextBox x:Name="DescriptionTextBox" HorizontalAlignment="Left" Height="118" Margin="226,291,0,0" TextWrapping="Wrap"  VerticalAlignment="Top" Width="637" TabIndex="2" AcceptsReturn="True" VerticalScrollBarVisibility="Visible" Background="#FF63E38E"/>
        <Label Content="Book Quantity" HorizontalAlignment="Left" Height="45" Margin="58,496,0,0" VerticalAlignment="Top" Width="140" Foreground="#0B5345"/>
        <TextBox x:Name="QuantityTextBox" HorizontalAlignment="Left" Height="45" Margin="226,490,0,0" TextWrapping="Wrap"  VerticalAlignment="Top" Width="227" TabIndex="4" Background="#FF63E38E"/>
        <Label Content="Book Price" HorizontalAlignment="Left" Height="45" Margin="516,497,0,0" VerticalAlignment="Top" Width="107" Foreground="#0B5345"/>
        <TextBox x:Name="PriceTextBox" HorizontalAlignment="Left" Height="45" Margin="637,492,0,0" TextWrapping="Wrap"  VerticalAlignment="Top" Width="227" TabIndex="5" Background="#FF63E38E"/>
        <Label Content="Author" HorizontalAlignment="Left" Height="45" Margin="58,558,0,0" VerticalAlignment="Top" Width="107" Foreground="#0B5345"/>
        <TextBox x:Name="AuthorTextBox" HorizontalAlignment="Left" Height="45" Margin="226,553,0,0" TextWrapping="Wrap"  VerticalAlignment="Top" Width="635" TabIndex="6" Background="#FF63E38E"/>
        <DatePicker x:Name="PublicationDateDatePicker" HorizontalAlignment="Left" Height="45" Margin="226,427,0,0" VerticalAlignment="Top" Width="187" Background="#FF63E38E" FontSize="20" HorizontalContentAlignment="Stretch" VerticalContentAlignment="Stretch" TabIndex="3"/>
        <Label Content="Pub. Date" HorizontalAlignment="Left" Height="45" Margin="58,427,0,0" VerticalAlignment="Top" Width="107" Foreground="#0B5345"/>
        <Label Content="Book Category" HorizontalAlignment="Left" Height="45" Margin="58,620,0,0" VerticalAlignment="Top" Width="147" Foreground="#0B5345"/>
        <ComboBox x:Name="BookCategoryIdComboBox" HorizontalAlignment="Left" Height="45" Margin="226,620,0,0" VerticalAlignment="Top" Width="290" Background="#ff4500" TabIndex="7" FontWeight="Bold" FontSize="18"/>

    </Grid>
</Window>
