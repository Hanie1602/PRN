@model SmokeQuit.Repositories.DuongLNT.Models.LeaderboardsDuongLnt

@{
    ViewData["Title"] = "Delete";
}

<h1 class="mb-3 text-danger"><i class="bi bi-exclamation-triangle-fill"></i> Confirm Deletion</h1>

<div class="card shadow-sm">
    <div class="card-body">
        <h5 class="card-title text-muted mb-3">Are you sure you want to delete this entry?</h5>

        <dl class="row">
            <dt class="col-sm-4">Day Smoke Free</dt>
            <dd class="col-sm-8">@Model.DaySmokeFree</dd>

            <dt class="col-sm-4">Money Saved</dt>
            <dd class="col-sm-8">@String.Format("{0:N0} VND", Model.MoneySave)</dd>

            <dt class="col-sm-4">Rank Position</dt>
            <dd class="col-sm-8">@Model.RankPosition</dd>

            <dt class="col-sm-4">Total Achievements</dt>
            <dd class="col-sm-8">@Model.TotalAchievements</dd>

            <dt class="col-sm-4">Progress Score</dt>
            <dd class="col-sm-8">@Model.ProgressScore</dd>

            <dt class="col-sm-4">Note</dt>
            <dd class="col-sm-8">@Model.Note</dd>

            <dt class="col-sm-4">Streak Count</dt>
            <dd class="col-sm-8">@Model.StreakCount</dd>

            <dt class="col-sm-4">Community Contribution</dt>
            <dd class="col-sm-8">@Model.CommunityContribution</dd>

            <dt class="col-sm-4">Top Ranked</dt>
            <dd class="col-sm-8">@((Model.IsTopRanked) ? "Yes" : "No")</dd>

            <dt class="col-sm-4">Last Update</dt>
            <dd class="col-sm-8">@Model.LastUpdate?.ToString("dd/MM/yyyy HH:mm")</dd>

            <dt class="col-sm-4">Created Time</dt>
            <dd class="col-sm-8">@Model.CreatedTime?.ToString("dd/MM/yyyy HH:mm")</dd>

            <dt class="col-sm-4">Plan Reason</dt>
            <dd class="col-sm-8">@Model.Plan?.Reason</dd>

            <dt class="col-sm-4">User Email</dt>
            <dd class="col-sm-8">@Model.User?.Email</dd>
        </dl>

        <form asp-action="Delete">
            <input type="hidden" asp-for="LeaderboardsDuongLntid" />

            <div class="mt-4 d-flex gap-2">
                <button type="submit" class="btn btn-danger">
                    <i class="bi bi-trash-fill"></i> Delete
                </button>
                <a asp-action="Index" class="btn btn-secondary">
                    <i class="bi bi-arrow-left"></i> Back to List
                </a>
            </div>
        </form>
    </div>
</div>
