<Window x:Class="LibraryManagement.GUI.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:LibraryManagement.GUI"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800" Loaded="Window_Loaded">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="0*"/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        <Button x:Name="CreateButton" Content="Create Book" HorizontalAlignment="Left" Height="34" Margin="3,25,0,0" VerticalAlignment="Top" Width="93" Grid.Column="1" Click="CreateButton_Click"/>
        <DataGrid x:Name="BookListDataGrid" HorizontalAlignment="Left" Height="259" Margin="10,131,0,0" VerticalAlignment="Top" Width="688" AutoGenerateColumns="True" Grid.Column="1"/>

    </Grid>
</Window>
