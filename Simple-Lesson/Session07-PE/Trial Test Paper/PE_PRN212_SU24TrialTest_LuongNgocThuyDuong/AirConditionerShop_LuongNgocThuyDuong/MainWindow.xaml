<Window x:Class="AirConditionerShop_LuongNgocThuyDuong.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:AirConditionerShop_LuongNgocThuyDuong"
        mc:Ignorable="d"
        Title="Thế Giới Điện Tử xứ F" Height="330" Width="600" FontFamily="Arial" FontSize="14" Background="#FFD4F7D4" WindowStartupLocation="CenterScreen" ResizeMode="NoResize">
    <Grid>
        <DataGrid HorizontalAlignment="Center" Height="233" VerticalAlignment="Center" Width="540" AutoGenerateColumns="False">
            <DataGrid.Columns>
                <!-- Ta đang định ngh4ia các cột của table, với độ rộng, tên gọi theo ý của ta (AutoGenerateColumns="False"). AutoGenerateColumns="True" tự map tên cột DB
                  Chính là <table><thead>.....
                -->
                <DataGridTextColumn Header="ID" Width="40" Binding="{Binding AirConditionerId}"/>
                <DataGridTextColumn Header="Air Con Name" Width="140" Binding="{Binding AirConditionerName}"/>
                <DataGridTextColumn Header="Warranty" Width="70" Binding="{Binding Warranty}"/>
            </DataGrid.Columns>
        </DataGrid>

    </Grid>
</Window>
