@model SmokeQuit.Repositories.DuongLNT.Models.LeaderboardsDuongLnt

@{
    ViewData["Title"] = "Create";
}

<h1 class="mb-4">Create Leaderboard</h1>

<div class="card shadow-sm">
    <div class="card-body">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>

            <div class="row g-3">
                <div class="col-md-6">
                    <label asp-for="UserId" class="form-label"></label>
                    <select asp-for="UserId" class="form-select" asp-items="ViewBag.UserId"></select>
                </div>

                <div class="col-md-6">
                    <label asp-for="PlanId" class="form-label"></label>
                    <select asp-for="PlanId" class="form-select" asp-items="ViewBag.PlanId"></select>
                </div>

                <div class="col-md-6">
                    <label asp-for="DaySmokeFree" class="form-label"></label>
                    <input asp-for="DaySmokeFree" class="form-control" />
                    <span asp-validation-for="DaySmokeFree" class="text-danger"></span>
                </div>

                <div class="col-md-6">
                    <label asp-for="MoneySave" class="form-label"></label>
                    <input asp-for="MoneySave" class="form-control" />
                    <span asp-validation-for="MoneySave" class="text-danger"></span>
                </div>

                <div class="col-md-6">
                    <label asp-for="RankPosition" class="form-label"></label>
                    <input asp-for="RankPosition" class="form-control" />
                    <span asp-validation-for="RankPosition" class="text-danger"></span>
                </div>

                <div class="col-md-6">
                    <label asp-for="TotalAchievements" class="form-label"></label>
                    <input asp-for="TotalAchievements" class="form-control" />
                    <span asp-validation-for="TotalAchievements" class="text-danger"></span>
                </div>

                <div class="col-md-6">
                    <label asp-for="StreakCount" class="form-label"></label>
                    <input asp-for="StreakCount" class="form-control" />
                    <span asp-validation-for="StreakCount" class="text-danger"></span>
                </div>

                <div class="col-md-6">
                    <label asp-for="CommunityContribution" class="form-label"></label>
                    <input asp-for="CommunityContribution" class="form-control" />
                    <span asp-validation-for="CommunityContribution" class="text-danger"></span>
                </div>

                <div class="col-md-6">
                    <label asp-for="ProgressScore" class="form-label"></label>
                    <input asp-for="ProgressScore" class="form-control" />
                    <span asp-validation-for="ProgressScore" class="text-danger"></span>
                </div>

                <div class="col-md-6">
                    <label asp-for="Note" class="form-label"></label>
                    <input asp-for="Note" class="form-control" />
                    <span asp-validation-for="Note" class="text-danger"></span>
                </div>

                <div class="col-md-6">
                    <label asp-for="LastUpdate" class="form-label"></label>
                    <input asp-for="LastUpdate" class="form-control" />
                    <span asp-validation-for="LastUpdate" class="text-danger"></span>
                </div>

                <div class="col-md-6 d-flex align-items-center mt-4">
                    <div class="form-check">
                        <input asp-for="IsTopRanked" class="form-check-input" />
                        <label asp-for="IsTopRanked" class="form-check-label"></label>
                    </div>
                </div>
            </div>

            <div class="mt-4 d-flex gap-2">
                <button type="submit" class="btn btn-primary">
                    <i class="bi bi-save"></i> Create
                </button>
                <a asp-action="Index" class="btn btn-secondary">
                    <i class="bi bi-arrow-left"></i> Back to List
                </a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
